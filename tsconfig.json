{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "es5",
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "declaration": true,
        "declarationDir": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2015"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "**/__tests__/**", "**/storybook/**"]
}
